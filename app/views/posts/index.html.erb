<p id="notice"><%= notice %></p>
<div class="container">
<h1>게시판</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>태그</th>
      <th>기능</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.tag %></td>
        <td><%= link_to '상세보기', post, class: 'btn btn-primary btn-sm' %>
        <%= link_to '수정하기', edit_post_path(post), class: 'btn btn-success btn-sm' %>
        <%= link_to '삭제하기', post, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 작성', new_post_path, class: 'btn btn-primary pull-right' %>
</div>
